<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.1"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">

    <persistence-unit name="agilitPU" transaction-type="RESOURCE_LOCAL">

        <!-- Suas entidades -->
        <class>com.agilit.model.Credor</class>
        <class>com.agilit.model.Devedor</class>
        <!-- adicione as outras entidades aqui -->

        <properties>

            <!-- Driver JDBC -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>

            <!-- URL do Banco (Substitua no persistence real) -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://SEU_HOST:5432/SEU_DATABASE?sslmode=require&amp;channelBinding=require"/>

            <!-- Usuário (Substitua no persistence real) -->
            <property name="jakarta.persistence.jdbc.user"
                      value="SEU_USUARIO"/>

            <!-- Senha (Substitua no persistence real) -->
            <property name="jakarta.persistence.jdbc.password"
                      value="SUA_SENHA"/>

            <!-- Dialeto Hibernate -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Geração/alteração das tabelas -->
            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>

            <!-- Log SQL -->
            <property name="hibernate.show_sql"
                      value="true"/>

        </properties>
    </persistence-unit>
</persistence>
